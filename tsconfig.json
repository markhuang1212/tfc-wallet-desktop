{
    "compilerOptions": {
        "strict": true,
        "rootDir": "src",
        "outDir": "dist",
        "module": "CommonJS",
        "target": "ES2020",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "incremental": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
