{
    "compilerOptions": {
        "strict": true,
        "rootDir": "src",
        "outDir": "dist",
        "module": "CommonJS",
        "target": "ES2020",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "incremental": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "./src/@types",
            "./node_modules/@types"
        ],
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "*/**/__test__",
        "node_modules",
        "types"
    ]
}
